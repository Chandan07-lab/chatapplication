pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = 'chandanjena/chat-app'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Chandan07-lab/chatapplication.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    docker.build("${DOCKER_HUB_REPO}:backend", './server')
                    docker.build("${DOCKER_HUB_REPO}:frontend", './client')
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-login') {
                        docker.image("${DOCKER_HUB_REPO}:backend").push()
                        docker.image("${DOCKER_HUB_REPO}:frontend").push()
                    }
                }
            }
        }
    }

    post {
        success {
            echo '✅ Deployment succeeded!'
        }
        failure {
            echo '❌ Deployment failed!'
        }
    }
}